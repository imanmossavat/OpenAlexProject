# Copy this file to ".env" before running `docker compose up` and fill in the blanks.

# Required OpenAlex polite email
OPENALEX_EMAIL=your.email@example.com

# Optional Zotero credentials
ZOTERO_LIBRARY_ID=
ZOTERO_LIBRARY_TYPE=user
ZOTERO_API_KEY=

# Storage roots (inside the container). Change when mounting custom paths.
ARTICLECRAWLER_LIBRARY_ROOT=/app/fakenewscitationnetwork/libraries

# API / frontend defaults
PROJECT_NAME="ArticleCrawler API"
BACKEND_VERSION="1.0.0"
BACKEND_DEBUG=true
LOG_LEVEL=INFO
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
FRONTEND_API_URL=http://localhost:8000
GROBID_URL=http://grobid:8070
